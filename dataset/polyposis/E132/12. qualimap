module load R/4.2.0
R
bed <- read.table("truseq-dna-exome-v1-2-hg38.bed",header= FALSE, sep="\t",stringsAsFactors=FALSE,quote="")
bed$V6 <- "."

write.table(bed, file = "truseq-dna-exome-v1-2-hg38-qualimap.bed", sep = "\t", row.names = FALSE, quote = FALSE, col.names = FALSE)
rm truseq-dna-exome-v1-2-hg38.bed

#!/bin/bash --login
#SBATCH -J AmyHouseman_qualimap
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-60
#SBATCH --time=12:00:00
#SBATCH --mem-per-cpu=128GB
#SBATCH --qos=maxjobs100
#SBATCH --partition=htc

module purge
module load singularity
module load parallel
module load qualimap

# Set bash error trapping to exit on first error.
set -eu

TOOL=qualimap
EXOME_IDs_FILE=/scratch/c.c21087028/Polyposis_Exome_Analysis_E132/fastp/All_fastp_input/IDswithoutR1R2_E132 
SORTEDBAM=/scratch/c.c21087028/Polyposis_Exome_Analysis_E132/samtools/sort/{}PE_samtoolssorted_GCA_000001405.15_GRCh38_no_alt_analysis_set.bam
QUALIMAPBAMQCOUTPUTDIR=/scratch/c.c21087028/Polyposis_Exome_Analysis_E132/qualimap{}
QUALIMAPBAMQCOUTPUTFILE={}
BEDFILEGFF=/scratch/c.c21087028/Polyposis_Exome_Analysis_E132/qualimap/bed/truseq-dna-exome-v1-2-hg38-qualimap.bed
MAKEDIRECTORYIDS=/scratch/c.c21087028/Polyposis_Exome_Analysis_E132/qualimap/output/qualimap_{}


cd /scratch/c.c21087028/

sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "$TOOL bamqc -bam $SORTEDBAM -gff $BEDFILEGFF -outdir $QUALIMAPBAMQCOUTPUTDIR -outfile $QUALIMAPBAMQCOUTPUTFILE -outformat pdf --java-mem-size=4G"
