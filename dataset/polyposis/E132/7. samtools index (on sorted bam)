#!/bin/bash --login
#SBATCH -J AmyHouseman_samtoolsindex
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p compute
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-60
#SBATCH --time=072:00:00
#SBATCH --mem-per-cpu=128GB

module purge
module load singularity
module load parallel

# Set bash error trapping to exit on first error.
set -eu

WDPATH=/scratch/$USER/$SLURM_ARRAY_JOB_ID
CONTAINER_FILE=samtools-1.9.sif
MY_CONTAINER_PATH=/scratch/$USER/containers
CONTAINER=$MY_CONTAINER_PATH/$CONTAINER_FILE

EXOME_IDs_FILE=/scratch/c.c21087028/Polyposis_Exome_Analysis_E132/fastp/All_fastp_input/IDswithoutR1R2_E132
SAMTOOLSSORTEDBAM=/scratch/c.c21087028/Polyposis_Exome_Analysis_E132/samtools/sort/{}PE_samtoolssorted_GCA_000001405.15_GRCh38_no_alt_analysis_set.bam
SAMTOOLSINDEXBAI=/scratch/c.c21087028/Polyposis_Exome_Analysis_E132/samtools/sort/{}PE_samtoolssorted_GCA_000001405.15_GRCh38_no_alt_analysis_set.bam.bai
SAMTOOLSINDEXONSORTEDOUTPUTFOLDER=/scratch/c.c21087028/Polyposis_Exome_Analysis_E132/samtools/index/indexed_samtoolssortedfiles/

if [ "$SLURM_ARRAY_TASK_ID" == "1" ]
then
  mkdir -p $MY_CONTAINER_PATH
  [ -f "$CONTAINER" ] || ssh cl1 wget -O $CONTAINER https://wotan.cardiff.ac.uk/containers/$CONTAINER_FILE
  mkdir $WDPATH
fi

while [ ! -d $WDPATH ]
do
  sleep 10
done

cd /scratch/c.c21087028/

#samtools index on PE reads
sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "singularity run $CONTAINER index $SAMTOOLSSORTEDBAM && mv $SAMTOOLSINDEXBAI $SAMTOOLSINDEXONSORTEDOUTPUTFOLDER"
