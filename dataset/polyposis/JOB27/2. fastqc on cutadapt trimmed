module purge
module load singularity
module load parallel

module load FastQC/0.11.8

cd /scratch/c.c21087028/

EXOMEIDS=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/RAW_inputs/IDswithoutfastqgz
FASTQCINPUT=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/cutadapt/TrimmedPEreads/{}.cutadapt-trimmed.fq.gz
FASTQCOUTPUT=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastqc/output/postcutadapapt/

sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "fastqc $FASTQCINPUT -o $FASTQCOUTPUT"
