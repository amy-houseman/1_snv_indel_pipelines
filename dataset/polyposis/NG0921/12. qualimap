
module load R/4.2.0
bed <- bed <- read.table("Agilent-SureSelect-XT-Reagent-Kit-Human-AllExon-V6-hg38.bed",head> bed$V4 <- 0
bed$V5 <- 0
bed$V6 <- "."

write.table(bed, file = "Agilent-SureSelect-XT-Reagent-Kit-Human-AllExon-V6-hg38-qualimap.bed", sep = "\t", row.names = FALSE, quote = FALSE, col.names = FALSE)
rm Agilent-SureSelect-XT-Reagent-Kit-Human-AllExon-V6-hg38.bed

#!/bin/bash --login
#SBATCH -J AmyHouseman_qualimap
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p compute
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-33
#SBATCH --time=12:00:00
#SBATCH --mem-per-cpu=128GB

module purge
module load singularity
module load parallel
module load qualimap

# Set bash error trapping to exit on first error.
set -eu

TOOL=qualimap
EXOME_IDs_FILE=/scratch/c.c21087028/Polyposis_Exome_Analysis_NG0921/fastp/All_fastp_input/NG0921_sampleIDs
SORTEDBAM=/scratch/c.c21087028/Polyposis_Exome_Analysis_NG0921/samtools/sort/{}PE_samtoolssorted_GCA_000001405.15_GRCh38_no_alt_analysis_set.bam
QUALIMAPBAMQCOUTPUTDIR=/scratch/c.c21087028/Polyposis_Exome_Analysis_NG0921/qualimap/output/qualimap_{}
QUALIMAPBAMQCOUTPUTFILE={}
BEDFILEGFF=/scratch/c.c21087028/Polyposis_Exome_Analysis_NG0921/deepvariant/bed/Agilent-SureSelect-XT-Reagent-Kit-Human-AllExon-V6-hg38-qualimap.bed
MAKEDIRECTORYIDS=/scratch/c.c21087028/Polyposis_Exome_Analysis_NG0921/qualimap/output/qualimap_{}


cd /scratch/c.c21087028/

sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "$TOOL bamqc -bam $SORTEDBAM -gff $BEDFILEGFF -outdir $QUALIMAPBAMQCOUTPUTDIR -outfile $QUALIMAPBAMQCOUTPUTFILE -outformat pdf --java-mem-size=4G"
