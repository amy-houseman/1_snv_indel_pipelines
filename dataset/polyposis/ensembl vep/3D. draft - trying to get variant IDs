#!/bin/bash --login
#SBATCH -J AmyHouseman_addsampleandvariantIDs
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p htc
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1
#SBATCH --qos=maxjobs500

module load parallel
EXOME_IDs_FILE=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/bcftools/input/alldataset_bestcov_IDS
INPUTVCF=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/TESTING_tripleee/input/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set_norefcalls_annotatedVEP_bcftoolssplitvcf_withchromheader_nofirstcolumn.vcf
OUTPUTVCF=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/TESTING_tripleee/output/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set_norefcalls_annotatedVEP_bcftoolssplitvcf_withchromheader_nofirstcolumn_withIDS.vcf
tmp=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/TESTING_tripleee/tmp/{}tmp.vcf
tmpcopy=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/TESTING_tripleee/tmpcopy/{}tmp.vcf


# Set bash error trapping to exit on first error.
set -eu

exome=$(sed -n "${SLURM_ARRAY_TASK_ID}p"  $EXOME_IDs_FILE)
awk -v id="$exome" 'BEGIN{ FS=OFS="\t" }
{print $1, (NR==1? "sample_variantpos_ID" : id), $2}' $INPUTVCF > $tmp && cp $tmp $tmpcopy &&
mv $tmpcopy $OUTPUTVCF
